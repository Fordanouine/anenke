<div class="container">


  <h2 class="text-center">Editer mon compte</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, label: "Mon email", required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, label: "Nouveau mot de passe souhaité", autocomplete: "off", required: true %>
      <%= f.input :password_confirmation, label: "Nouveau mot de passe souhaité de nouveau", required: true %>
      <%= f.input :current_password, label: "Mot de passe actuel", required: true %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Mettre à jour", class: "btn btn-primary"  %>
    </div>
  <% end %>

  <h3 class="text-center" style="padding-top: 30px">Vous n'êtes pas satisfait ?</h3>

  <p class="text-center"><%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary"  %></p>

</div>
